{
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "types",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "outDir": "build",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictFunctionTypes": false,
        "strictNullChecks": true,
        "target": "ESNext"
    }
}